{
  "name": "soak/flow",
  "type": "project",
  "license": "proprietary",
  "description": "Soak's flavour of roots/bedrock with our own modifications and preferred plugins.",
  "homepage": "https://bitbucket.org/soak/soak-flow/src",
  "authors": [
    {
      "name": "Soak Digital Ltd.",
      "homepage": "http://www.soak.co.uk"
    }
  ],
  "keywords": [
    "bedrock",
    "composer",
    "roots",
    "wordpress",
    "wp",
    "wp-config"
  ],
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://satis.soak.co.uk"
    }
  ],
  "require": {
    "php": ">=7.2",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^3.4.0",
    "oscarotero/env": "^1.2.0",
    "roots/wordpress": "^5.3",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "soak/advanced-custom-fields-pro": "^5.8",
    "soak/soak-flow-core": "^0.9",
    "wpml/sitepress-multilingual-cms": "^4.3.10",
    "wpml/wpml-string-translation": "^3.0.7",
    "wpml/advanced-custom-fields-multilingual": "^1.6.1",
    "soak/soak-image-resize": "^1.0",
    "wpackagist-plugin/autodescription": "^4.0",
    "wpackagist-plugin/duracelltomi-google-tag-manager": "^1.9",
    "wpackagist-plugin/advanced-forms": "^1.6",
    "wpackagist-plugin/query-monitor": "^3.4",
    "wpackagist-plugin/redis-cache": "^1.5",
    "wpackagist-plugin/simple-history": "^2.3",
    "soak/misk-academy-api-client": "^1.0",
    "jjgrainger/posttypes": "^2.0",
    "humanmade/s3-uploads": "^2.2",
    "wpackagist-plugin/wp-sentry-integration": "^3.3",
    "wpackagist-plugin/mailgun": "^1.7"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "brainmaestro/composer-git-hooks": "^2.8",
    "symfony/var-dumper": "^5.0"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin",
        "soak/advanced-custom-fields-pro",
        "soak/soak-image-resize",
        "wpackagist-plugin/autodescription",
        "wpackagist-plugin/advanced-forms",
        "wpackagist-plugin/redis-cache",
        "wpackagist-plugin/simple-history",
        "wpackagist-plugin/wp-sentry-integration",
        "wpackagist-plugin/mailgun"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp",
    "hooks": {
      "pre-push": [
        "composer run test"
      ]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs --standard=PSR2 ./web/app/themes"
    ]
  }
}
